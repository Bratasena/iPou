<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MitraDetailInvest">

    <TextView
        android:id="@+id/txtKandang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_nunitobold"
        android:text="Kandang 1"
        android:textAlignment="center"
        android:textColor="#ff8364"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_roboto"
        android:text="1.blabla"
        android:textColor="#333"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtInvestPrice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_roboto"
            android:text="10000000"
            android:textColor="#333"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:text="-" />

        <TextView
            android:id="@+id/txtInvestTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#333"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:text="+" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkInvest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Menyetujui perjanjian yang ada" />

    <Button
        android:id="@+id/btnInvest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/orange_button"
        android:fontFamily="@font/font_nunitobold"
        android:text="invest"
        android:textColor="#fff" />
</LinearLayout>