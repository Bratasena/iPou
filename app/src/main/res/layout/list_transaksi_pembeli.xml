<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imgProduct"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/txtJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imgProduct"
                android:ellipsize="end"
                android:maxLines="2"
                android:fontFamily="@font/font_nunitobold"
                android:text="Ayam Broiler"
                android:textColor="#ff8364"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtJumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtJudul"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imgProduct"
                android:text="Jumlah"
                android:textColor="#333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtJumlah"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imgProduct"
                android:text="Status"
                android:textColor="#333"
                android:textSize="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>